<Window x:Class="SleepingBearSystem.Cryptogram.CryptogramApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cryptogram" Height="450" Width="800">
    <Grid Margin="10,10,10,10">
        <StackPanel>
            <StackPanel>
                <Label>Encrypted Text</Label>
                <TextBox Name="EncryptedText" Text="{Binding Path=EncryptedText, UpdateSourceTrigger=Explicit}" Height="128"></TextBox>
                <StackPanel>
                    <Button
                        Command="{Binding Path=UpdateCommand}"
                        CommandParameter="{Binding ElementName=EncryptedText, Path=Text}"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        Width="64">Update</Button>
                </StackPanel>
            </StackPanel>
            <TextBlock Margin="0,10,0,0">Solution</TextBlock>
        </StackPanel>
    </Grid>
</Window>
